<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:JavaSwitcher.ViewModels"
             x:Class="JavaSwitcher.Views.LogView"
             x:DataType="vm:LogViewModel">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="5">
            <Button Content="Clear" Command="{Binding ClearLogsCommand}" Margin="5"/>
        </StackPanel>
        
        <Border BorderBrush="Gray" BorderThickness="1" Margin="5">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding LogMessages}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" 
                                     Margin="5,2" 
                                     FontFamily="Consolas,Courier New"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </DockPanel>
</UserControl>